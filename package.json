{
  "name": "beety---beetroot-programming-language-ide",
  "productName": "Beety IDE",
  "version": "1.0.0",
  "description": "IDE for Beetroot Programming Language",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Beety Softworks",
  "license": "ISC",
  "dependencies": {
    "resize-img": "^2.0.0",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.beetysoft.app",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/Beety(icon)-fin.ico"
    },
    "nsis": {
      "installerIcon": "assets/Beety(icon)-fin.ico",
      "uninstallerIcon": "assets/Beety(icon)-fin.ico",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
